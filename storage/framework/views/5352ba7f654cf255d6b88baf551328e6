				/// submit form
				$("form").validate({
					errorClass:'text-danger',
					errorPlacement: function(error, element) {
						element.parent().addClass('has-error') ;
						error.insertAfter(element);
					},
					success: function(label) {
					   label.parent().removeClass('has-error') ;
					   label.remove();
					 },
