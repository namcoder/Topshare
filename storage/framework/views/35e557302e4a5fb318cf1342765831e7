	<script>
	$('form').submit(function(){
		var data = $(this).serialize();
		$('.error').addClass('hide');
		$.ajax({
			type:'post',
			url:'<?php echo e(url("login")); ?>',
			data:{data:data,_token:token},
			success:function(x){
				if(x=='false'){
					$('.error').removeClass('hide');
				}else{
					window.location.href='<?php echo e(url("profile")); ?>';
				}
			}
		});
		return false;
	});
	
	</script>
